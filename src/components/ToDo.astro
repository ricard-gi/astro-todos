---
const { Title, Id } = Astro.props.dades;
//console.log(descripcio)
---

<div class="border mb-8 w-1/2 p-8 bg-white">
    <h1 class="text-xl font-bold text-center">{Title}</h1>

    <hr class="my-4" />
    <h2>{Id}</h2>

    <a href={"/todos/eliminar/" + Id}>
        <button
            class="bg-red-500 hover:bg-red-700 text-white py-1 px-2 text-sm rounded "
        >
            Eliminar
        </button>
    </a>
</div>
